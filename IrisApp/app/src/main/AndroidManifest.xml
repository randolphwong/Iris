<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.randolph.irisapp">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="com.example.randolph.bluetooth.BlueToothApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BluetoothCommActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditTagActivity"
            android:label="@string/title_activity_edit_tag"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".AddTagActivity"
            android:label="@string/title_activity_add_tag"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ThresholdActivity"
            android:label="@string/title_activity_threshold"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
